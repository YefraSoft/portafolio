    <section>
      <h2 id="marco-teorico" class="text-2xl font-semibold mb-2">
        Marco Teórico
      </h2>
      <div class="space-y-4">
        <ReferenceImage
          imageUrl={images.Ia.imageUrl}
          description={images.Ia.description}
          linkUrl={images.Ia.linkUrl}
          floatDirection={images.Ia.floatDirection}
