---
const projects = [
  {
    URL: "https://github.com/YefraSoft/Multipartes",
    role: "Project Manager",
    name: "Multipartes Garcia's",
    tasks: [
      "Website development",
      "Project requirements management",
      "Deployment to production",
    ],
    description:
      "Corporate project. Designed the system architecture, gathered requirements, and currently developing the mobile application. The website provides inventory visibility, while the mobile app is focused on inventory and sales management.",
    time: {
      init: 2025,
      end: "PRESENT",
    },
    technologies: ["MySQL", "Spring Boot", ".NET MAUI", "Astro"],
    languages: ["SQL", "Java", "JavaScript", "C#", "HTML", "CSS"],
  },
  {
    URL: "https://github.com/YefraSoft/FundacionDireccionCorrecta",
    role: "Project Manager",
    name: "Fundación Dirección Correcta",
    tasks: [
      "Website development",
      "Project requirements management",
      "Deployment to production",
    ],
    description:
      "Personal project. Managed from concept to final implementation. The platform facilitates donations from companies and individuals in Mexico, distributing funds to specific sectors such as schools and restaurants.",
    time: {
      init: 2024,
      end: 2025,
    },
    technologies: ["MySQL", "Spring Boot", "React"],
    languages: ["SQL", "Java", "JavaScript"],
  },
];


// REDUCIR EL OBJETO AGREGAR UNA IMAGEN Y QUITAR LENGUAJES
---

<article id="projects"
  class="max-w-3xl mx-auto p-6 text-accent-400 text-justify animate-fade-up font-Content space-y-5 overflow-hidden leading-relaxed"
>
  <h2 class="text-3xl font-bold mb-4 flex gap-2 font-Title">PROJECTS</h2>
  {
    projects.map((project, index) => (
      <a href={project.URL} target="_blank"
        class={`block py-3 rounded-xl shadow-lg overflow-hidden text-lg ${
          index % 2 === 0 ? "animate-fade-left" : "animate-fade-right"
        }`}
      >
        <div class="flex text-primary-700 items-center gap-1 text-sm">
          {project.time.init} <div class="w-1/20 bg-primary-700 h-px"/> {project.time.end}
        </div>
        <h3 class="text-2xl font-bold flex items-center gap-2 mb-3">
          <i class="fas fa-briefcase text-primary-400" /> {project.name}
        </h3>
        <p class=" text-sm mb-2">
          <i class="fas fa-user-tie text-primary-400" /> {project.role}
        </p>
        <div class="md:flex">
          <ul class="md:basis-1/3 list-disc list-inside">
            {project.tasks.map((task) => (
              <li class="">
                {task}
              </li>
            ))}
          </ul>
          <p class="md:basis-2/3">{project.description}</p>
        </div>
        <div class="flex flex-wrap gap-2 mt-4">
          {project.technologies.map((tech) => (
            <span class="px-3 py-1 text-sm font-semibold text-primary-900 bg-primary-400 rounded-full">
              {tech}
            </span>
          ))}
          {project.languages.map((lang) => (
            <span class="px-3 py-1 text-sm font-semibold text-secondary-900 bg-secondary-400 rounded-full">
              {lang}
            </span>
          ))}
        </div>
      </a>
    ))
  }
</article>
