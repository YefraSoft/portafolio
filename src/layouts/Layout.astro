---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";

interface Props {
  title?: string;
  background?: string;
}
const { title = "Systems Engineer", background } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Efrain Garcia, Systems Engineer and Game Developer. Specializing in Artificial Intelligence and game development. Explore my projects and writing."
    />
    <meta name="robots" content="index, follow" />
    <meta
      name="keywords"
      content="game development, artificial intelligence, software development, Efrain Garcia"
    />
    <link rel="canonical" href="https://yefrasoft.netlify.app/" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="preload" href="https://fonts.googleapis.com" />
    <link rel="preload" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Chewy&family=Dosis:wght@200..800&family=Oxygen:wght@300;400;700&family=Sniglet:wght@400;800&display=swap"
      rel="stylesheet"
    />

    <meta name="generator" content={Astro.generator} />
    <title> Yefrasoft - {title}</title>
  </head>
  <body class={background}>
    <!-- <Navbar /> -->
    <slot />
  </body>
</html>

